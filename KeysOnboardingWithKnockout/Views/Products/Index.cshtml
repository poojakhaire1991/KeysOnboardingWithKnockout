@model IEnumerable<KeysOnboardingWithKnockout.Models.Product>

@{
    ViewBag.Title = "Index";
}
<head>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/knockout.validation.js"></script>
    <script src="~/Scripts/knockout.validation.min.js"></script>
</head>
    
    @*<script src="~/Scripts/jquery.validate.min.js"></script>*@

<p>
    <button class="btn btn-success" data-bind="click: $root.add">Add Product</button>
</p>

<table class="table" id="products1" data-bind="visible: Products().length > 0">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Products">
        <tr>
            <td data-bind="visible:false , text: Id "></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Price"></td>
            <td>
                
                <button type="button" data-bind="click: $root.Edit" id="btnEdit" class="btn btn-warning">Edit</button>
                <button type="button" id="btnDelete" data-bind="click:$root.Delete" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    </tbody>

</table>

@*Create Modal*@
<div id="CreateModal" class="modal fade">
    <div class="modal-dialog" data-bind="with : Product">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" type="text" data-bind="value : Name, valueUpdate : 'afterkeydown'" />
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" data-bind="value : Price, valueUpdate : 'afterkeydown'" />
                        </div>
</div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click : $root.SaveCustomer, enable : IsValid">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>

        </div>

    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/MyScripts/Product.js"></script>
}
